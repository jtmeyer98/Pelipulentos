<table>
  <thead>
    <tr>
      <th>Nomre</th>
      <th>Año</th>
      <th>Director</th>
      <th>Actores</th>
      <th>Género</th>
      <th>Rating</th>
      <th>Vista</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director %></td>
        <td><%= movie.actors %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.viewed %></td>
        <td><%= link_to "Mostrar", movie %></td>
        <td><%= link_to "Editar", edit_movie_path(movie) %></td>
        <td><%= link_to "Eliminar", movie, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="button-container">
  <%= link_to "New movie", new_movie_path, class: "button" %>
</div>
